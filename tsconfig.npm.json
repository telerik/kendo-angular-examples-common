{
  "compilerOptions": {
    "outDir": "dist/npm",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "types": [],

    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "removeComments": false
  },
  "files": [
    "src/main.ts"
  ],
  "angularCompilerOptions": {
    "flatModuleId": "@progress/kendo-angular-component-base",
    "flatModuleOutFile": "index.js",
    "rootDir": "src",
    "skipMetadataEmit": false,
    "skipTemplateCodegen": false
  }
}
