{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "types": [ "jest", "zone.js" ],

    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
